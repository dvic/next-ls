#!/bin/sh

# used for local development

set -e

cd "$(dirname "$0")"/.. || exit 1

main() {
	machine="$(uname)"
	arch="$(uname -m)"
	target="$(echo $machine | tr 'A-Z' 'a-z')_$(echo $arch | tr 'A-Z' 'a-z')"

	BURRITO_TARGET="$target" MIX_ENV=dev mix release --overwrite

	exec "./burrito_out/next_ls_$target" "$@"
}

main "$@"
